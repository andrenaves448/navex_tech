# Ativa o mod_rewrite
RewriteEngine On

# Força HTTPS (caso seu domínio já tenha SSL ativo)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .html da URL
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.html [L]

# Bloqueia acesso direto a arquivos sensíveis
<FilesMatch "\.(htaccess|env|ini|log|conf)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Evita listagem de diretórios
Options -Indexes

# Ativa compressão gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Cache para arquivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 1 week"
</IfModule>

# Página personalizada para erros 404
ErrorDocument 404 /404.html
